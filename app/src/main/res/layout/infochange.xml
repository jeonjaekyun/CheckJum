<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mbtn"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffffff"
        android:padding="10dp">

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/nowid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mbtn" />

    <TextView
        android:id="@+id/nowid_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/draw"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/nowid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 비밀번호"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/nowid_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/nowpw"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/draw"
        android:password="true"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/newpassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/newpasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경할 비밀번호"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/nowpw"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/newpw"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/draw"
        android:padding="10dp"
        android:password="true"
        app:layout_constraintTop_toBottomOf="@id/newpasswd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/newpw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경할 비밀번호 확인"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/newpw"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <EditText
        android:id="@+id/newpw_chk"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/draw"
        android:padding="10dp"
        android:password="true"
        app:layout_constraintTop_toBottomOf="@id/newpw1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="변경하기"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/newpw_chk"
        app:layout_constraintRight_toRightOf="@+id/gu" />

    <android.support.constraint.Guideline
        android:id="@+id/gu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6302083" />



</android.support.constraint.ConstraintLayout>