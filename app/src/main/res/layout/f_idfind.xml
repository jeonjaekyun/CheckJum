<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:id="@+id/find_name"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/fn_edittext"
        android:background="@drawable/draw"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/find_name"
        app:layout_constraintLeft_toLeftOf="@+id/find_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:id="@+id/find_email"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/fn_edittext"
        app:layout_constraintLeft_toLeftOf="@+id/fn_edittext" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/fe_edittext"
        android:background="@drawable/draw"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/find_email"
        app:layout_constraintLeft_toLeftOf="@+id/find_email"
        />
</android.support.constraint.ConstraintLayout>