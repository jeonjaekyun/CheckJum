<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:id="@+id/jm_name"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/jmname_edittext"
            android:background="@drawable/draw"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/jm_name"
            app:layout_constraintLeft_toLeftOf="@+id/jm_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:id="@+id/jm_id"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/jmname_edittext"
            app:layout_constraintLeft_toLeftOf="@+id/jmname_edittext" />

        <EditText
            android:id="@+id/jmid_edittext"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/draw"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/jm_id"
            app:layout_constraintTop_toBottomOf="@+id/jm_id" />

        <Button
            android:id="@+id/btnValidate"
            android:text="중복체크"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/jmname_edittext"
            app:layout_constraintLeft_toRightOf="@+id/jmid_edittext"
            app:layout_constraintTop_toBottomOf="@+id/jmname_edittext"
            app:layout_constraintBottom_toTopOf="@+id/jmpw_edittext"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:id="@+id/jm_pw"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/jmid_edittext"
            app:layout_constraintLeft_toLeftOf="@+id/jmid_edittext" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/jmpw_edittext"
            android:background="@drawable/draw"
            android:password="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/jm_pw"
            app:layout_constraintLeft_toLeftOf="@+id/jm_pw"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:id="@+id/jm_re_pw"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/jmpw_edittext"
            app:layout_constraintLeft_toLeftOf="@+id/jmpw_edittext" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/jmrepw_edittext"
            android:background="@drawable/draw"
            android:password="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/jm_re_pw"
            app:layout_constraintLeft_toLeftOf="@+id/jm_re_pw"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:id="@+id/jm_email"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/jmrepw_edittext"
            app:layout_constraintLeft_toLeftOf="@+id/jmrepw_edittext" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/jmemail_edittext"
            android:background="@drawable/draw"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/jm_email"
            app:layout_constraintLeft_toLeftOf="@+id/jm_email"
            />

        <Button
            android:id="@+id/membership_btn"
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/jmemail_edittext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>